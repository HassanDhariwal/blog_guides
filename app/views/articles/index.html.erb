<html style=  "background-image: url(/assets/wallpaper.jpg");alt="smiley face">
<head>
<marquee>hello rails</marquee>

<h1>Listing articles</h1>
<%= link_to 'All welcome recode', welcome_index_path, class: 'btn btn-primary' %>
<%= link_to 'new article', new_article_path , class: "btn btn-primary" %>
</head>
<body>
<table class="table table-bordered">
  <thead class="thead-dark">
  <tr>
  	<th>ID</th>
    <th>Title</th>
    <th>Text</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Destory</th>
  </tr>
</thead>
 <tbody>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.id %></td>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article), class: 'btn btn-primary' %>
      </td>
      <td><%= link_to 'Edit', edit_article_path(article) ,class:'btn btn-success' %></td>
      <td><%= link_to 'Destroy', article_path(article), class: 'btn btn-danger',
            method: :delete,
            data: { confirm: 'Are you sure?' } %>
       </button></td>
    </tr>
  <% end %>
</tbody>
</table>
</body>
</html>
